<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%-5level][%class{1}:%line] %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.home:-.}/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- ganti file setiap jam -->
            <fileNamePattern>
                ${catalina.home:-.}/logs/app.%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <!-- simpan file selama sebulan (24 * 31) -->
            <maxHistory>384</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d [%-5level][%class{1}:%line] %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.artivisi" >
        <appender-ref ref="FILE"/>
    </logger>
    
    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>